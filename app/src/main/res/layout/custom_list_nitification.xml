<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d30">

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_app" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d30"
            android:layout_toEndOf="@id/img_notification"
            android:layout_toRightOf="@id/img_notification"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/d10"
                android:text="Notification"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvMessageNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginTop="@dimen/d20"
                android:text="tin moi"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text18" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>