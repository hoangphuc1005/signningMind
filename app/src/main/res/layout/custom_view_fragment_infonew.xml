<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d10"
    android:layout_marginRight="@dimen/d10"
    android:layout_marginTop="@dimen/d20"
    android:layout_marginBottom="@dimen/d20"
    android:background="@drawable/bg_info_new"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test_info" />

    <TextView
        android:id="@+id/tvTitleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgInfo"
        android:layout_alignLeft="@+id/imgInfo"
        android:layout_alignRight="@+id/imgInfo"
        android:layout_margin="1dp"
        android:gravity="bottom"
        android:lines="2"
        android:paddingBottom="@dimen/d20"
        android:paddingLeft="@dimen/d20"
        android:paddingRight="@dimen/d20"
        android:text="adasdadada"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text18" />
</RelativeLayout>